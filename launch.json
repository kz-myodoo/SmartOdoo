{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Odoo",
            "type": "python",
            "request": "attach",
            "port": 8069,
            "debugServer": 5858,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/addons",
                    "remoteRoot": "/mnt/extra-addons"
                },
                {
                    "localRoot": "<odoo_addons_location>",
                    "remoteRoot": "/usr/lib/python3/dist-packages/odoo/addons"
                }
            ],
            "logToFile": true,
            "justMyCode": false
        }
    ]
}